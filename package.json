{
  "name": "public-codex",
  "version": "1.0.0",
  "description": "A secure content publishing platform with encrypted storage and authorship protection",
  "main": "poets-codex-server.js",
  "scripts": {
    "start": "node poets-codex-server.js",
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon poets-codex-server.js",
    "client:dev": "cd client && npm start",
    "server:start": "node poets-codex-server.js",
    "client:build": "cd client && npm run build",
    "install:all": "npm install && cd client && npm install",
    "deploy:setup": "chmod +x deploy-setup.sh && ./deploy-setup.sh",
    "deploy:pages": "cd client && npm run deploy"
  },
  "keywords": [
    "content-publishing",
    "creative-writing",
    "copyright-protection",
    "encrypted-storage",
    "authorship-protection",
    "react",
    "nodejs",
    "semantic-search",
    "copyright",
    "creative-commons"
  ],
  "author": "Richie Looney",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "workspaces": [
    "client",
    "server"
  ],
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "better-sqlite3": "^12.4.1",
    "crypto-js": "^4.2.0",
    "multer": "^2.0.2",
    "sqlite3": "^5.1.7"
  }
}
